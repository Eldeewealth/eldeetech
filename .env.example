# Mail (Zoho)
ZOHO_USER=info@your-domain.com
ZOHO_PASS=your-zoho-app-password
ZOHO_SMTP_HOST=smtp.zoho.eu
ZOHO_SMTP_PORT=465
TO_PRIMARY=info@your-domain.com
TO_CC=
EMAIL_TZ=Africa/Lagos
EMAIL_FOOTER_IMAGE_URL=
EMAIL_STRICT_MX=false
EMAIL_ALLOW_RECOGNIZED_ONLY=false
# Comma-separated list of additional allowed work/school domains (e.g. your company or partners)
ALLOW_EMAIL_DOMAINS=
# Optional regex to allow domains (e.g. ".*\\.your-company\\.com$")
ALLOW_EMAIL_DOMAIN_REGEX=

# Database (Neon non-pooled URL is preferred)
# DATABASE_URL=postgresql://USER:PASSWORD@HOST/neondb?sslmode=require

# Admin Area
ADMIN_USERNAME=admin@your-domain.com
ADMIN_PASSWORD_HASH=$2b$12$paste_bcrypt_hash_here
ADMIN_JWT_SECRET=replace_with_a_long_random_string
ADMIN_SESSION_TTL_HOURS=8
# Optional: customize cookie name
# ADMIN_COOKIE_NAME=admin_session

# Admin login rate limiting (defaults shown)
# ADMIN_LOGIN_MAX_ATTEMPTS=3
# ADMIN_LOGIN_WINDOW_SECONDS=900
# ADMIN_LOGIN_LOCK_SECONDS=900

# Admin 2FA (TOTP) options
# ADMIN_TOTP_SECRET=BASE32_SECRET_HERE
# ADMIN_TOTP_REQUIRED=false
# ADMIN_TOTP_ON_EXCESS=true

# Optional: require admin username to match an email domain regex (e.g. ^[^@]+@eldeetech\.com\.ng$)
# ADMIN_USERNAME_DOMAIN_REGEX=
